{
  "manifest_version": 3,
  "name": "Bromodoro",
  "version": "1.0.0",
  "description": "A focus-enhancing Pomodoro timer that keeps you locked on your chosen tab",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bromodoro - Focus Timer"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
